{
  "name": "gaqno-development-workspace",
  "version": "0.0.0",
  "private": true,
  "packageManager": "npm@11.6.2",
  "workspaces": [
    "@gaqno-backcore",
    "@gaqno-frontcore",
    "gaqno-shell",
    "gaqno-sso",
    "gaqno-sso-service",
    "gaqno-finance",
    "gaqno-finance-service",
    "gaqno-ai",
    "gaqno-ai-service",
    "gaqno-crm",
    "gaqno-erp",
    "gaqno-pdv",
    "gaqno-pdv-service",
    "gaqno-rpg",
    "gaqno-rpg-service"
  ],
  "scripts": {
    "install:all": "npm install --legacy-peer-deps",
    "clean": "rm -rf node_modules */node_modules @**/node_modules",
    "build:packages": "npm run build -w @gaqno-backcore",
    "build:all": "npm run build -w gaqno-shell && npm run build -w gaqno-sso && npm run build -w gaqno-ai && npm run build -w gaqno-crm && npm run build -w gaqno-erp && npm run build -w gaqno-finance && npm run build -w gaqno-pdv && npm run build -w gaqno-rpg && npm run build -w gaqno-sso-service && npm run build -w gaqno-ai-service && npm run build -w gaqno-finance-service && npm run build -w gaqno-pdv-service && npm run build -w gaqno-rpg-service",
    "dev": "turbo run dev --concurrency=13",
    "dev:backends": "turbo run dev --concurrency=13 --filter=./gaqno-sso-service --filter=./gaqno-ai-service --filter=./gaqno-finance-service --filter=./gaqno-pdv-service --filter=./gaqno-rpg-service",
    "dev:frontends": "turbo run dev --concurrency=13 --filter=./gaqno-shell --filter=./gaqno-sso --filter=./gaqno-ai --filter=./gaqno-crm --filter=./gaqno-erp --filter=./gaqno-finance --filter=./gaqno-pdv --filter=./gaqno-rpg",
    "dev:shell": "npm run dev -w gaqno-shell",
    "dev:ai": "npm run dev -w gaqno-ai",
    "dev:crm": "npm run dev -w gaqno-crm",
    "dev:erp": "npm run dev -w gaqno-erp",
    "dev:finance": "npm run dev -w gaqno-finance",
    "dev:pdv": "npm run dev -w gaqno-pdv",
    "dev:rpg": "npm run dev -w gaqno-rpg",
    "dev:sso": "npm run dev -w gaqno-sso",
    "dev:sso-service": "npm run start:dev -w gaqno-sso-service",
    "dev:ai-service": "npm run start:dev -w gaqno-ai-service",
    "dev:finance-service": "npm run start:dev -w gaqno-finance-service",
    "dev:pdv-service": "npm run start:dev -w gaqno-pdv-service",
    "dev:rpg-service": "npm run start:dev -w gaqno-rpg-service",
    "release:packages": "./publish-packages.sh"
  },
  "devDependencies": {
    "turbo": "^2.3.0"
  }
}
